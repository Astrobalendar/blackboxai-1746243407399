# ==================================
# Application Configuration
# ==================================
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
API_PREFIX=/api
API_VERSION=v1

# ==================================
# Frontend Configuration (Vite)
# ==================================
VITE_BACKEND_URL=http://localhost:3001
VITE_APP_NAME="Astrobalendar"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="AI-powered KP Astrology App"

# ==================================
# Database Configuration
# ==================================
MONGODB_URI=mongodb://mongodb:27017/astrobalendar
MONGODB_TEST_URI=mongodb://mongodb:27017/astrobalendar-test
REDIS_URL=redis://redis:6379

# ==================================
# Authentication & Security
# ==================================
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=30d
COOKIE_SECRET=your_cookie_secret_here
COOKIE_EXPIRES_DAYS=7

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100  # Max requests per window per IP

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ==================================
# Firebase Configuration (Frontend)
# ==================================
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ==================================
# Firebase Admin SDK (Backend)
# ==================================
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY=your_private_key
FIREBASE_CLIENT_EMAIL=your_client_email

# ==================================
# Email Configuration
# ==================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM="Astrobalendar <noreply@astrobalendar.com>"

# ==================================
# Third-Party APIs
# ==================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
SENTRY_DSN=your_sentry_dsn

# ==================================
# Feature Flags
# ==================================
FEATURE_MAINTENANCE_MODE=false
FEATURE_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=true

# ==================================
# Logging & Monitoring
# ==================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_QUERY_LOGGING=false

# ==================================
# Performance
# ==================================
NODE_OPTIONS=--max-old-space-size=2048
UV_THREADPOOL_SIZE=10

# ==================================
# Session & Cache
# ==================================
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400  # 1 day in seconds
CACHE_TTL=3600  # 1 hour in seconds

# ==================================
# File Uploads
# ==================================
MAX_FILE_SIZE=5242880  # 5MB
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# ==================================
# Analytics
# ==================================
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your_mixpanel_token

# ==================================
# Development & Debugging
# ==================================
DEBUG=app:*,api:*,error:*
NODE_ENV=development
