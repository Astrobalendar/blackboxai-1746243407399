# ====================================
# Astrobalendar Frontend Configuration
# ====================================
# Copy this file to .env and update values
# NEVER commit .env to version control
# ====================================

# Environment
# ==========
NODE_ENV=development
VITE_APP_VERSION=1.0.0
VITE_APP_NAME=Astrobalendar
VITE_APP_BASE_URL=/
VITE_APP_DEFAULT_LOCALE=en
VITE_APP_FALLBACK_LOCALE=en

# Backend API Configuration
# ========================
# Local Development
VITE_BACKEND_URL=http://localhost:3001

# Production (uncomment and update for production)
# VITE_BACKEND_URL=https://astrobalendar-backend.onrender.com

# API Timeout (in milliseconds)
VITE_API_TIMEOUT=30000

# Firebase Configuration
# ====================
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Google Maps API (Required for location features)
# ==============================================
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Feature Flags
# ============
VITE_FEATURE_EMAIL_NOTIFICATIONS=true
VITE_FEATURE_ANALYTICS=false
VITE_FEATURE_MAINTENANCE_MODE=false

# Performance & Monitoring
# ======================
VITE_SENTRY_DSN=your_sentry_dsn
VITE_GA_TRACKING_ID=your_ga_tracking_id

# Security
# =======
VITE_CSP_REPORT_URI=https://your-domain.report-uri.com/r/d/csp/enforce

# Development Only
# ===============
# Enable React DevTools in production build (for debugging)
VITE_ENABLE_REACT_DEVTOOLS=false

# Enable why-did-you-render
VITE_ENABLE_WHY_DID_YOU_RENDER=false

# Enable React Query DevTools
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

# Enable MSW (Mock Service Worker) for API mocking
VITE_ENABLE_MSW=false
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abcdef123456
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Services
# =============
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
VITE_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Feature Flags
# ===========
VITE_FEATURE_REGISTRATION=true
VITE_FEATURE_ANALYTICS=false
VITE_FEATURE_MAINTENANCE=false

# Internationalization
# ===================
VITE_DEFAULT_LOCALE=en
VITE_FALLBACK_LOCALE=en
VITE_SUPPORTED_LOCALES=en,ta

# Sentry (Error Tracking)
# =====================
# VITE_SENTRY_DSN=your_sentry_dsn
# VITE_SENTRY_ENVIRONMENT=development

# App Settings
# ===========
VITE_PAGE_TITLE=Astrobalendar - Vedic Astrology Predictions
VITE_PAGE_DESCRIPTION=Get accurate Vedic astrology predictions, Rasi and Navamsa charts, and personalized horoscopes.
VITE_OG_IMAGE_URL=/images/og-image.jpg

# Development Only
# ==============
# VITE_DEBUG=true
# VITE_API_MOCKING=true
