{
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "types": ["node", "vite/client"],
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "apps/**/*",
    "scripts/**/*",
    "lib/**/*",
    "shared/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage"
  ]
}
